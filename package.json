{
  "name": "typed-transform",
  "version": "0.1.0",
  "description": "A TypeScript library for type-safe pipe transformations",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "test": "vitest",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run test && npm run check && npm run typecheck",
    "prepare": "husky"
  },
  "keywords": ["typescript", "pipe", "transform", "functional"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^22.17.1",
    "husky": "^9.1.7",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^1.6.1"
  },
  "engines": {
    "node": ">=22"
  },
  "lint-staged": {
    "*": ["biome check --no-errors-on-unmatched --files-ignore-unknown=true"]
  }
}
